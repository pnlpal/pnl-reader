{
  "manifest_version": 3,
  "minimum_chrome_version": "100",
  "name": "PNL Reader",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["https://pnl.dev/*"],
      "js": ["inject-pdf-reader.bundle.js"]
    }
  ],
  "action": {
    "default_title": "PNL Reader: simple viewer mode for novel lovers"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "32": "images/logo32.png",
    "64": "images/logo64.png",
    "128": "images/logo128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["*.mjs", "*.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["file:///*"]
}
